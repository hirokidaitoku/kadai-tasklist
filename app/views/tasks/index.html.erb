<h1>タスク管理</h1>

<% if logged_in? %>
  <p>ユーザー名:<%= current_user.name %></p>

  <% if @tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>タスク</th>
          <th>進行状況</th>
        </tr>
      </thead> 
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mb-2">
      <%= paginate @tasks %>
    </div>
  <% else %>
    <p>タスクはありません。</p>
  <% end %>

<% else %>
  <div class="text-center">
　  <%= link_to "ユーザー登録", new_user_path, class: "btn btn-success" %>
  </div>
<% end %>

 